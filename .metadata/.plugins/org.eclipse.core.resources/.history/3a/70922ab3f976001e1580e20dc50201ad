package joining07;

public class Joning {

	public static void main(String[] args) {
		Thread hiloUno = new Thread() {
			@Override
			public void run() {
				int max = 10;
				do {
					System.out.println("el uno");
					int times = 10000;
					Utiles.wastingTime(times);
				} while (--max > 0);
				System.out.println("el uno terminando");
			}

		};

		Thread hiloDos = new Thread() {
			@Override
			public void run() {
				int max = 10;
				try {
					System.out.println("joining order");
					hiloUno.join();
				} catch (InterruptedException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}
				System.out.println("joining ends");
				do {
					System.out.println("el dos");
					Utiles.wastingTime(10000);
				} while (--max > 0);
			}

		};
		hiloDos.start();
		hiloUno.start();
	}
}
